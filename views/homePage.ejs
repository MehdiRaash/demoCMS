<% include common/header.ejs %>  

  <div id="index-banner" class="parallax-container">
    <% if(mainPost.posts.length !== 0){ %>
    <div class="section no-pad-bot mainPost">
      <div class="container">
        <br><br>
         <h1 class="header right white-text text-lighten-2"><%- mainPost.title %></h1>
          <a href='<%- "/post/" + mainPost.posts[0]["_id"].toString() + "/" + mainPost.posts[0].title.replace(/ /g,"-") %>'>
          
            <div class="row">
              <h5 class="header col s12 light">
                <%- mainPost.posts[0].title %>
              </h5>
            </div>
          </a> 
        <br><br> 
      </div>
    </div>
    <% } %>
    <div class="parallax"><img src="public/images/background1.jpg" alt="Unsplashed background img 1"></div>
  </div>


  <div class="container">
  
    <div class="section">

      <!--   Icon Section   -->
      <div class="row">
        <div class="col s12 m4 right">
          <div class="card newsCard">		
           <% if(sport.posts.length !== 0){ %> 		
             <div class="section sectionTitle">		
               <span class="center mainTitle"><%= sport.title %></span>		
             </div>		
             <div class="card-image cardImg">		
               <img src="/public/images/sport.jpg">		
               </div>		
             <% sport.posts.forEach(function(eachPost){ %> 		
             <div class="card-content postContent">		
             <div class="icon-block">   		
               <p class="mainHeader postTitle"><a href='<%- "/post/" + eachPost["_id"].toString() + "/" + eachPost.title.replace(/ /g,"-") %>'> <%= eachPost.title %></a></p>		
               <p class="mainTxt light readMore"><%- eachPost.text %></p>		
             </div> 		
             </div> 
              <% }); %>
            <% } else{ %>
            <p class="">فاقد خبر <%= sport.title %></p>
            <% } %>
          </div>
        </div>

        <div class="col s12 m4 right">
          <div class="card newsCard">		
           <% if(politic.posts.length !== 0){ %> 		
             <div class="section sectionTitle">		
               <span class="center mainTitle"><%= politic.title %></span>		
             </div>		
             <div class="card-image cardImg">		
               <img src="/public/images/politic.jpg">		
               </div>		
             <% politic.posts.forEach(function(eachPost){ %> 		
             <div class="card-content postContent">		
             <div class="icon-block">   		
               <p class="mainHeader postTitle"><a href='<%- "/post/" + eachPost["_id"].toString() + "/" + eachPost.title.replace(/ /g,"-") %>'> <%= eachPost.title %></a></p>		
               <p class="mainTxt light readMore"><%- eachPost.text %></p>		
             </div> 		
             </div> 
              <% }); %>
            <% } else{ %>
            <p class="">فاقد خبر <%= politic.title %></p>
            <% } %>
          </div>
        </div> 

        <div class="col s12 m4 right">
          <div class="card newsCard">		
           <% if(social.posts.length !== 0){ %> 		
             <div class="section sectionTitle">		
               <span class="center mainTitle"><%= social.title %></span>		
             </div>		
             <div class="card-image cardImg">		
               <img src="/public/images/social.jpg">		
               </div>		
             <% social.posts.forEach(function(eachPost){ %> 		
             <div class="card-content postContent">		
             <div class="icon-block">   		
               <p class="mainHeader postTitle"><a href='<%- "/post/" + eachPost["_id"].toString() + "/" + eachPost.title.replace(/ /g,"-") %>'> <%= eachPost.title %></a></p>		
               <p class="mainTxt light readMore"><%- eachPost.text %></p>		
             </div> 		
             </div> 
              <% }); %>
            <% } else{ %>
            <p class="">فاقد خبر <%= social.title %></p>
            <% } %>
          </div>
        </div>

      </div>
    </div>
  </div>
  </div>


